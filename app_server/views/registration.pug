doctype html
block content
	html
		head
			link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css', rel='stylesheet')
			script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
			script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
		body
			.container
				.registration.mx-auto.d-block.w-100
					.page-header.text-center
						h1 Sign up
					form#member-registration.form-validate.form-horizontal.well(action='/astroidnew/index.php/pages/register?task=registration.register', method='post', enctype='multipart/form-data')
						fieldset
							legend User Registration
							.form-group
								label(for='exampleInputPassword1') Name *
								input#exampleInputPassword1.form-control(type='text')
							.form-group
								label(for='exampleInputPassword1') Username *
								input#exampleInputPassword1.form-control(type='text')
							.form-group
								label(for='exampleInputPassword1') Password *
								input#exampleInputPassword1.form-control(type='password')
							.form-group
								label(for='exampleInputPassword1') Confirm Password *
								input#exampleInputPassword1.form-control(type='password')
							.form-group
								label(for='exampleInputEmail1') Email Address *
								input#exampleInputEmail1.form-control(type='email')
							.form-group
								label(for='exampleInputEmail1') Confirm Email Address *
								input#exampleInputEmail1.form-control(type='email')
							.d-flex.justify-content-between.align-items-center
								.form-group.d-flex.justify-content-start
									button.btn.btn-primary(type='submit') Submit
								.form-check.form-group.d-flex.justify-content-end
									a(href='#') Sign in instead
